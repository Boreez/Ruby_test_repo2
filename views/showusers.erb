<h2>  Список клиентов </h2>
<table class="table table-striped">
<!-- table headers -->
  <thead >
    <tr>
      <th>Name</th>
      <th>Телефон</th>
			<th>Дата записи</th>
			<th>Парикмахер</th>
			<th>Цвет</th>
		</tr>
	</thead>

  <tbody>

		<% @results.each do |row| %>
			<tr>
				<td><%= row['username'] %></td>
				<td><%= row['phone'] %></td>
				<td><%= row['datestamp'] %></td>
				<td><%= row['barber'] %></td>
				<td style="background-color: <%= row['color'] %>"></td>
			</tr>
		<% end %>
	</tbody>

</table>
